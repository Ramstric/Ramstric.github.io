---
import "../styles/global.css";

import Socials from "../components/Socials.astro";

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/contour-integral.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>

  <div class="menu">
    <a class={pageTitle == 'home' ? "active" : ""} href="/" >/home</a>
    <a class={pageTitle == 'projects' ? "active" : ""} href="/projects" >/projects</a>
    <a class={pageTitle == 'about' ? "active" : ""} href="/about" >/about me</a>
  </div>

  <body>
    <main>
      <slot />
    </main>

    <footer>
      <Socials/>
      <p>© 2025 | Ramón Everardo Hernández Hernández</p>
    </footer>
  </body>
</html>

<style>
  .menu {
    flex-direction: row;
    padding: 10px 0;
    gap: 100px;

    & a {
      padding: 0 12px;
      border-radius: 18px;
      transition: all 0.2s ease-in-out;
    }
  }

  .menu a.active {
    background: var(--white);
    color: var(--background);
  }

  .menu a:hover {
    background: var(--white);
    color: var(--background);
  }

  main {
    width: 100%;
    height: 100%;
    gap: 50px;
  }

  footer {
    display: flex;
    flex-direction: column;
    place-items: center;

    height: fit-content;
    
    gap: 10px;
    padding: 8px 0;

    & p {
      color: var(--gray);
    };
  }
</style>
