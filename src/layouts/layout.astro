---
import "../styles/global.css";

import Socials from "../components/Socials.astro";

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/contour-integral.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>

  <body>
    <main>
      <slot />
    </main>

    <footer>
      <Socials/>
      <p>© 2025 | Ramón Everardo Hernández Hernández</p>
    </footer>
  </body>
</html>

<!-- ------ Local style ------ -->

<style>
  main {
    width: 100%;
    height: 100%;
  }

  footer {
    display: flex;
    flex-direction: column;
    place-items: center;

    height: fit-content;
    
    gap: 20px;
    padding: 10px 0;

    & p {
      color: var(--gray);
    };
  }
</style>
