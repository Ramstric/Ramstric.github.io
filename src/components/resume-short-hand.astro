---
const { title, subtitle, country, detail, colorSubtitle } = Astro.props;
---

<div class="resume-short-hand">
  <div class="upper-row">
    <h3>{title}</h3>
    <h3 style="color: var(--secondary-color)">{country}</h3>
  </div>

  <div class="lower-row">
    <h3>{subtitle}</h3>
    <h3 style="color: var(--secondary-color)">{detail}</h3>
  </div>
</div>

<!-- ------ Local style ------ -->

<style define:vars={{ colorSubtitle: `${colorSubtitle}` }}>
  .resume-short-hand {
    padding: 0 10px;
  }

  .upper-row,
  .lower-row {
    justify-content: space-between;
    flex-direction: row;
  }

  .lower-row h3:first-child {
    color: var(--colorSubtitle);
  }

  @media screen and (min-width: 636px) {
    .resume-short-hand {
      padding: 0 50px;
    }
  }
</style>
