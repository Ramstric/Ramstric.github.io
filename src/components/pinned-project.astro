---
const { name, description, id } = Astro.props;

const route = `/projects/${id}`;
---

<a class="pinned-project" href={route}>
    <h3>{name}</h3>
    <p>{description}</p>
</a>

<!-- ------ Local style ------ -->

<style>
    .pinned-project {
        display: flex;
        flex-direction: column;
        justify-content: center;

        gap: 10px;

        width: 100%;
        padding: 15px;

        text-decoration: none;
        border-radius: 15px;
        
        background: linear-gradient(170deg, var(--background), var(--background), var(--background), #070707);
        transition: filter 0.2s;
    }

    .pinned-project p {
        color: var(--secondary-color);
    }

    .pinned-project:hover {filter: drop-shadow(0px 0px 20px #000000);}

</style>
