---
const { name, description, id } = Astro.props;

const route = `/projects/${id}`;
---

<a class="pinnedProject" href={route}>
    <p>{name}</p>
    <p>{description}</p>
</a>


<style>
    .pinnedProject {
        display: flex;
        flex-direction: column;
        place-items: center;

        width: 350px;
        height: fit-content;

        padding: 4px 18px;

        border-radius: 12px;
        
        /*
        background: linear-gradient(170deg, var(--background), #181818, #181818, #181818);
        */
        background: #181818;

        transition: all 0.15s;
        
        & p:nth-child(1) {
            color: var(--white);
            font-weight: 300;
        }

        & p:nth-child(2) {
            color: var(--light-gray);
        }
    }

    .pinnedProject:hover {
        filter: drop-shadow(0px 0px 10px #000000);
    }
</style>